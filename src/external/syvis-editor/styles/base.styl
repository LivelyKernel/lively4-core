  > .left::after
    content '\a0â‰¡\a0'

.operator-equals-strict-not
  > .left::after
    content '\a0â‰¢\a0'

.operator-shift-left
  > .left::after
    content '\a0â‰ª\a0'

.operator-shift-right
  > .left::after
    content '\a0â‰«\a0'

.operator-less-than
  > .left::after
    content '\a0<\a0'

.operator-less-than-equals
  > .left::after
    content '\a0â‰¤\a0'

