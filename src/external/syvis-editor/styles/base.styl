  > .left::after
    content '\a0>\a0'

.operator-greater-than-equals
  > .left::after
    content '\a0â‰¥\a0'

.operator-spread::before
  content '\a0â€¦\a0'

.operator-delete::before
  content '\a0âŒ¦\a0'

.operator-typeof::before
  content '\a0typeof\a0'
  font-weight 600

.operator-void::before
  font-weight 600
  content '\a0void\a0'


.containsThisExpression
  > .property::before
    content ''

.thisExpression
  &::after
    content '@'

.shebang
  color gray
  margin-bottom 1em



