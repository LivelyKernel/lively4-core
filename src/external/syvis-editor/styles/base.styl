  > .left::after
    content '\a0âˆ¨\a0'

.operator-not::before
  content 'Â¬\a0'
  font-weight 600

.operator-add
  > .left::after
    content '\a0+\a0'

.operator-subtract
  > .left::after
    content '\a0-\a0'

.operator-multiply
  > .left::after
    content '\a0Ã—\a0'

.operator-equals
  width 1.5em
  > .left::after
    content '\a0â‰”\a0'

.operator-equals-not
  > .left::after
